<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <%= link_to "チャットを終了する", room_path(@room), data: { turbo_method: :delete }, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition-colors" %>
    </div>
  </div>
</div>

<div class="messages bg-gray-50 overflow-y-auto p-4 space-y-4">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'form bg-white p-4 shadow-inner', local: true do |f| %>
  <div class="form-input flex items-center space-x-4">
    <div class="relative flex-1">
      <%= f.text_field :content, class: 'form-message w-full border-2 border-gray-300 rounded-full py-2 px-4 focus:outline-none focus:border-teal-500 transition-colors', placeholder: 'Type a message...' %>
      <label class="absolute right-3 top-2 text-gray-400 hover:text-teal-500 cursor-pointer">
        <%= f.file_field :image, class: 'hidden' %>
        <ImageIcon size="20" />
      </label>
    </div>
    <%= f.submit '送信', class: 'form-submit bg-teal-500 text-white rounded-full p-2 hover:bg-teal-600 transition-colors' %>
  </div>
<% end %>
